<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security.xsd">

    <!--Здесь настраиваются страницы входа, возможность выхода, фильтры доступа к страницам-->
    <http auto-config="true">
        <form-login login-page="/authorization" default-target-url="/?login"
                    authentication-failure-url="/authorization?error"
                    username-parameter="username"
                    password-parameter="password"
        />
        <logout logout-success-url="/index?logout"/>
        <intercept-url pattern="/authorization" access="isAnonymous()"/>
        <intercept-url pattern="/registration" access="isAnonymous()"/>

        <intercept-url pattern="/profile" access="isAuthenticated()"/>
        <intercept-url pattern="/equipment-booking" access="isAuthenticated()"/>
        <intercept-url pattern="/user/**" access="isAuthenticated()"/>


        <intercept-url pattern="/add-project" access="hasAnyRole('ROLE_ADMIN','ROLE_MODERATOR','ROLE_MEMBER')"/>
        <intercept-url pattern="/edit-project" access="hasAnyRole('ROLE_ADMIN','ROLE_MODERATOR','ROLE_MEMBER')"/>
        <intercept-url pattern="/add-news" access="hasAnyRole('ROLE_ADMIN','ROLE_MODERATOR','ROLE_MEMBER')"/>
        <intercept-url pattern="/equipment-type-detailed" access="hasAnyRole('ROLE_ADMIN','ROLE_MODERATOR','ROLE_MEMBER')"/>


        <intercept-url pattern="/add-order" access="hasAnyRole('ROLE_ADMIN','ROLE_MODERATOR','ROLE_CUSTOMER')"/>
        <intercept-url pattern="/edit-order" access="hasAnyRole('ROLE_ADMIN','ROLE_MODERATOR','ROLE_CUSTOMER')"/>

        <intercept-url pattern="/add-equipment-type" access="hasAnyRole('ROLE_ADMIN','ROLE_MODERATOR')"/>
        <intercept-url pattern="/equipment-table" access="hasAnyRole('ROLE_ADMIN','ROLE_MODERATOR')"/>

        <intercept-url pattern="/admin" access="hasAnyRole('ROLE_ADMIN','ROLE_MODERATOR')"/>

        <intercept-url pattern="/change-profile" access="hasAnyRole('ROLE_ADMIN','ROLE_MODERATOR','ROLE_MEMBER','ROLE_CUSTOMER')"/>
        <intercept-url pattern="/moderation" access="isAuthenticated()"/>
    </http>

    <authentication-manager alias="authenticationManager">
        <authentication-provider user-service-ref="userDetailsServiceImpl">
            <password-encoder ref="encoder"></password-encoder>
        </authentication-provider>
    </authentication-manager>

    <beans:bean id="encoder"
                class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
        <beans:constructor-arg name="strength" value="11"/>
    </beans:bean>

</beans:beans>